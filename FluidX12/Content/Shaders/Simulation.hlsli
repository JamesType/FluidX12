//--------------------------------------------------------------------------------------
// Grid space to simulation space
//--------------------------------------------------------------------------------------
float3 GridToSimulationSpace(uint3 index, float3 gridSize)
{
	return (index + 0.5) / gridSize;
}

//--------------------------------------------------------------------------------------
// Grid space to simulation space
//--------------------------------------------------------------------------------------
float3 SimulationToTextureSpace(float3 pos, float3 gridSize)
{
	return pos;
}
